/dts-v1/;

#include <dt-bindings/gpio/gpio.h>
#include "armada-372x.dtsi"

/ {
	model = "Globalscale Marvell ESPRESSOBin Board";
	compatible = "globalscale,espressobin", "marvell,armada3720", "marvell,armada3710";

	chosen {
		stdout-path = "serial0:115200n8";
	};

	memory@0 {
		device_type = "memory";
		reg = <0x00000000 0x00000000 0x00000000 0x20000000>;
	};
};

&pcie0 {
	status = "okay";
};

&sata {
	status = "okay";
};

&sdhci0 {
	non-removable;
	bus-width = <8>;
	mmc-ddr-1_8v;
	mmc-hs400-1_8v;
	marvell,pad-type = "fixed-1-8v";
	status = "okay";
};

&sdhci1 {
	wp-inverted;
	bus-width = <4>;
	cd-gpios = <&gpionb 3 GPIO_ACTIVE_LOW>;
	marvell,pad-type = "sd";
	status = "okay";
};

&uart0 {
	status = "okay";
};

&usb3 {
	status = "okay";
};

&usb2 {
	status = "okay";
};

&i2c0 {
	pinctrl-names = "default";
	pinctrl-0 = <&i2c1_pins>;
	status = "okay";
	rtc@51  {
		compatible = "nxp,pcf8563";
		reg = <0x51>;
	};
};

&mdio {
	switch0: switch0@1 {
		compatible = "marvell,mv88e6085";
		#address-cells = <1>;
		#size-cells = <0>;
		reg = <2>;

		dsa,member = <0 0>;

		ports {
			#address-cells = <1>;
			#size-cells = <0>;

			port@6 {
				reg = <6>;
				label = "cpu";
				ethernet = <&eth0>;
			};

			port@0 {
				reg = <0>;
				label = "lan0";
				phy-handle = <&switch0phy0>;
			};

			port@1 {
				reg = <1>;
				label = "lan1";
				phy-handle = <&switch0phy1>;
			};

			port@2 {
				reg = <2>;
				label = "lan2";
				phy-handle = <&switch0phy2>;
			};

			port@3 {
				reg = <3>;
				label = "lan3";
				phy-handle = <&switch0phy3>;
			};

			port@4 {
				reg = <4>;
				label = "wan";
				phy-handle = <&switch0phy4>;
			};
		};

		mdio_bus {
			#address-cells = <1>;
			#size-cells = <0>;

			switch0phy0: switch0phy0@10 {
				reg = <0x10>;
			};
			switch0phy1: switch0phy1@11 {
				reg = <0x11>;
			};
			switch0phy2: switch0phy2@12 {
				reg = <0x12>;
			};
			switch0phy3: switch0phy1@13 {
				reg = <0x13>;
			};
			switch0phy4: switch0phy2@14 {
				reg = <0x14>;
			};
		};
	};
};

&crypto {
	status = "okay";
};

&eth0 {
	phy-mode = "rgmii-id";
	status = "okay";

	fixed-link {
		speed = <1000>;
		full-duplex;
	};
};
